<% if Like.find_by(user_id: current_user.id, item_id: @item.id) %>
  <%= link_to "/items/#{@item.id}/likes/#{@item.likes.ids}", method: :delete, class:"element", remote: true do %>
    <%= icon("fas", "heart", class: "like") %>
  <% end %>
<% else %>
  <%= link_to "/items/#{@item.id}/likes", method: :post, class:"element", remote: true do %>
    <%= icon("fas", "heart", class: "unlike") %>
  <% end %>
<% end %>
<div class="count">
  <%= @item.likes.count %>
</div>

<% if blog.liked_by?(current_user) %>
     <p><span>お気に入り解除: </span><%=link_to @item.likes.count, blog_likes_path(@item.id), method: :delete, remote: true %></p>
<% else %>
     <p><span>お気に入り登録: </span><%=link_to @item.likes.count, blog_likes_path(@item.id), method: :post, remote: true %></p>
<% end %>